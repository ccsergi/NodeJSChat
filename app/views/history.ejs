<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Seleccionar Chat</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/chat/history/list">Historial</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/chat/list">Chat</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container mt-4">
  <h2>Historial</h2>
  <% if (typeof success != 'undefined') { %>
    <div class="alert alert-primary" role="alert">Historial eliminado</div>
    <% } %>
    
  <form id="miFormulario">
    <div class="mb-3">
      <label for="opcionesSelect" class="form-label">Selecciona una sala:</label>
      <select class="form-select" id="opcionesSelect">
        <option value="1">Sala 1</option>
        <option value="2">Sala 2</option>
        <option value="3">Sala 3</option>
        <option value="4">Sala 4</option>
        <option value="5">Sala 5</option>
        <option value="6">Sala 6</option>
      </select>
    </div>
    <button type="button" class="btn btn-primary" onclick="redirigir()">Ver historial</button>
  </form>
</div>

<script>
  function redirigir() {
    var seleccion = document.getElementById("opcionesSelect").value;
    var url = "/chat/history/view/" + seleccion;
    window.location.href = url;
  }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
